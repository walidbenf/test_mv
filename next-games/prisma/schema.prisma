datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:mysecretpassword@localhost:5432/next_games"
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String?
  createdAt DateTime @default(now())
}